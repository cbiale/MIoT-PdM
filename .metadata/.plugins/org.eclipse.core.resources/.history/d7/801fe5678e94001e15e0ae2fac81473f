#include <API_interfaz.h>
#include "API_lcd.h"
#include <stdbool.h>
#include <stdio.h>

// #include "API_dht22.h"

void interfaz_iniciar() {
	lcd_limpiar();
	lcd_luz_fondo(true);
	lcd_ubicar(0, 0);
	lcd_escribir_string("T: ");
	lcd_ubicar(1, 0);
	lcd_escribir_string("H: ");
}

void interfaz_actualizar() {
	char cadena[100];
	float temperatura = 0.0; //dh22_obtener_temperatura();
	float humedad = 0.0; //dh22_obtener_humedad();
	lcd_ubicar(0, 2);
	sprintf(cadena, "%2.2f", temperatura);
	lcd_escribir_string(cadena);
	lcd_ubicar(1, 2);
	sprintf(cadena, "%2.2f", humedad);
	lcd_escribir_string(cadena);
}
