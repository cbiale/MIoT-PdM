#include "MEF_sistema.h"

typedef enum {
	INICIO,
	MOSTRANDO_DATOS,
} estado_sistema_t;

static estado_sistema_t estado;


void sistema_iniciar() {
	// inicia todo el sistema I2c, lcd, uart
	I2C_iniciar();
	lcd_iniciar();
	uartInit();
	// activa luz de fondo del lcd
	lcd_luz_fondo(true);
	estado = INICIO;
}

void sistema_actualizar() {

}

