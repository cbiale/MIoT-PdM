#include "MEF_sistema.h"

typedef enum {
	INICIO,
	MOSTRANDO_DATOS,
} estado_sistema_t;

static estado_sistema_t estado;


void sistema_iniciar() {
	// inicia todo el sistema I2c, lcd, uart
	I2C_iniciar();
	lcd_iniciar();
	uartInit();
	interfaz_iniciar();
}

void sistema_actualizar() {
	interfaz_actualizar();
}

