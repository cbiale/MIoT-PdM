#ifndef API_INC_API_DHT22_H_
#define API_INC_API_DHT22_H_

#include "port.h"
#include "API_delay.h"
#include "API_uart.h"

/**
 * @brief Obtiene los datos del sensor DHT22 y deja disponible los valores obtenidos.
 *
 * Realiza las operaciones necesarias para obtener los datos del sensor DHT22 y
 * actualiza las variables que contienen los datos de temperatura y humedad.
 *
 * @return void
 */
void dht_actualizar ();

/**
 * @brief Obtiene la temperatura actual desde el sensor DHT22.
 *
 * Retorna la temperatura actual medida por el sensor DHT22.
 *
 * @return Temperatura actual en grados Celsius (float).
 */
float dht_obtener_temperatura();

/**
 * @brief Obtiene la humedad actual desde el sensor DHT22.
 *
 * Retorna la humedad actual medida por el sensor DHT22.
 *
 * @return Humedad actual en porcentaje (float).
 */
float dht_obtener_humedad();

/**
 * @brief Obtiene la secuencia de lectura del sensor DHT22.
 *
 * Retorna la secuencia de lectura del sensor DHT22, se usa para controlar si hay una nueva lectura.
 *
 * @return Humedad actual en porcentaje (float).
 */
bool dht_nueva_lectura();

#endif /* API_INC_API_DHT22_H_ */
